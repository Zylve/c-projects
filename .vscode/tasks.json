{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "process",
            "label": "C/C++: clang build active file",
            "command": "/usr/bin/clang++",
            "args": [
                "--config",
                "${workspaceFolder}/.vscode/clang.cfg",
                "-fshow-column",
                "-fshow-source-location",
                "-fcaret-diagnostics",
                "-fcolor-diagnostics",
                "-O2",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}